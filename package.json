{
	"name": "saidnews",
	"version": "1.0.0",
	"description": "a project website for studying and learning",
	"main": "index.js",
	"scripts": {
		"dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
		"services:up": "docker compose -f infra/compose.yaml --env-file .env.development up -d",
		"services:stop": "docker compose -f infra/compose.yaml --env-file .env.development stop",
		"services:down": "docker compose -f infra/compose.yaml --env-file .env.development down",
		"lint:prettier:check": "prettier --check .",
		"lint:prettier:fix": "prettier --write .",
		"lint:eslint:check": "next lint --dir .",
		"test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
		"test:watch": "jest --watchAll --runInBand",
		"migration:create": "node-pg-migrate -m infra/migrations create",
		"migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
		"migration:down": "node-pg-migrate -m infra/migrations down",
		"wait-for-postgres": "node infra/scripts/wait-for-postgres.ts",
		"prepare": "husky",
		"commit": "cz"
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"async-retry": "1.3.3",
		"commitizen": "4.3.1",
		"dotenv": "16.4.4",
		"dotenv-expand": "11.0.6",
		"eslint-config-prettier": "10.1.8",
		"next": "16.1.1",
		"node-pg-migrate": "6.2.2",
		"pg": "8.16.3",
		"react": "19.2.3",
		"react-dom": "19.2.3"
	},
	"devDependencies": {
		"@commitlint/cli": "20.2.0",
		"@commitlint/config-conventional": "20.2.0",
		"@types/jest": "30.0.0",
		"@types/node": "25.0.3",
		"@types/react": "19.2.7",
		"concurrently": "8.2.2",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "9.39.2",
		"eslint-config-next": "16.1.1",
		"eslint-plugin-jest": "29.11.0",
		"husky": "9.1.7",
		"jest": "30.2.0",
		"prettier": "3.7.4",
		"ts-jest": "29.4.6",
		"typescript": "5.9.3"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
